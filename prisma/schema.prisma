// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String @id @default(uuid())
  name         String
  email        String
  address      String
  phone_number String

  is_an_org Boolean? @default(false)

  password_hash String
  pet           Pet[]
}

enum Breed {
  CAT
  DOG
}

model Pet {
  id String @id @default(uuid())

  name        String
  breed       Breed   @default(CAT)
  description String?

  is_available_for_adoption Boolean? @default(true)

  org   User   @relation(fields: [orgId], references: [id])
  orgId String
}
